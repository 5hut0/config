# Multi Monitors
xrandr --output eDP1 --auto --rate 60
xrandr --output eDP3 --auto --rate 60
xrandr --output HDMI2 --auto --rate 60 --scale 1.5x1.5 --right-of eDP1
xrandr --output HDMI3 --auto --rate 60 --scale 1.5x1.5 --right-of eDP1
xrandr --dpi 144

# X Settings
xsetroot -cursor_name left_ptr
xbindkeys

# key repeat
xset r rate 200 120

# No Beep
xset b 0

# Urxvt Daemon
urxvtd -q -o -f


export DefaultImModule=fcitx
export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS="@im=fcitx"
