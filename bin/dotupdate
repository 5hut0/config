#!/bin/bash
selectType=()
selectType+=("UpdateHomebrew")
selectType+=("RelinkDotfiles")

for v in $selectType; do
 echo $v
done | peco | while read i; do

case $i in

#==============================================================================
# Update Homebrew
#==============================================================================
"UpdateHomebrew")
cat << 'EOT'
 _   _                      _
| | | | ___  _ __ ___   ___| |__  _ __ _____      __
| |_| |/ _ \| '_ ` _ \ / _ \ '_ \| '__/ _ \ \ /\ / /
|  _  | (_) | | | | | |  __/ |_) | | |  __/\ V  V /
|_| |_|\___/|_| |_| |_|\___|_.__/|_|  \___| \_/\_/

EOT
echo 'Update Homebrew'
brew update
brew upgrade
brew cleanup
brew linkapps macvim
;;

#==============================================================================
# Relink dotfiles
#==============================================================================
"RelinkDotfiles")
cat << 'EOT'
 ____      _ _       _
|  _ \ ___| (_)_ __ | | __
| |_) / _ \ | | '_ \| |/ /
|  _ <  __/ | | | | |   <
|_| \_\___|_|_|_| |_|_|\_\

EOT
echo 'Relink dotfiles'
sh ~/.config/scripts/link_dotfiles.sh
;;


esac
done
