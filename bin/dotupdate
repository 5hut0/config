#!/bin/bash
selectType=()
selectType+=("UpdateHomebrew")
selectType+=("RelinkDotfiles")

for v in $selectType; do
 echo $v
done | peco | while read i; do

case $i in

#==============================================================================
# Update Homebrew
#==============================================================================
"UpdateHomebrew")
cat << 'EOT'
 _   _                      _
| | | | ___  _ __ ___   ___| |__  _ __ _____      __
| |_| |/ _ \| '_ ` _ \ / _ \ '_ \| '__/ _ \ \ /\ / /
|  _  | (_) | | | | | |  __/ |_) | | |  __/\ V  V /
|_| |_|\___/|_| |_| |_|\___|_.__/|_|  \___| \_/\_/

EOT
echo 'Update Homebrew'
brew update
brew upgrade
brew cleanup
;;


esac
done
